<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.paymentProject.PaymentProjectActivity">

    <ImageView
        android:id="@+id/img_paypal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/paypal"
        android:layout_marginTop="@dimen/margin_size_ultra_big"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_price_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_super_big"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/margin_size_big"
        android:layout_marginTop="@dimen/margin_size_medium"
        android:text="$1500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_paypal"/>

    <TextView
        android:id="@+id/tv_tag_info_send_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/send_to_payment_loutaro_com_to_make_your_project_post_on_loutaro"
        android:textSize="@dimen/text_size_big"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_size_small"
        android:layout_marginHorizontal="@dimen/margin_size_super_big"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_price_payment"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_payment_project"
        style="@style/ButtonWrap"
        tools:text="@string/yes_withdraw_my_money"
        android:layout_marginTop="@dimen/margin_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tag_info_send_payment"/>

</androidx.constraintlayout.widget.ConstraintLayout>